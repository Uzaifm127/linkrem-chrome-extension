{
  "manifest_version": 3,
  "name": "Linkrem",
  "version": "1.0.0",
  "description": "Chrome extension for effectively managing your saved bookmarks and links.",
  "permissions": ["bookmarks", "tabs"],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "24": "icons/icon.png",
      "32": "icons/icon.png"
    }
  }
}
